//A.IQ test								Omar Al-Qalqiliy			
#include<iostream>
#include<string>
using namespace std;

int main() 
{
	int n, x, even=0, odd=0,e=0,o=0;
	cin >> n;
	for (int i = 0; i < n; i++)
	{
		cin >> x;
		if (x % 2 == 0) {
			even++;
			e = i + 1;
		}
		if (x % 2 == 1) {
			odd++;
			o = i + 1;
		}
	}
	cout << (even > odd ? o : e);
	return 0;
}
